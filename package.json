{
    "name": "ytrss",
    "version": "0.0.2",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/ytrss.git",
    "author": "dermeck <dermeck@posteo.de>",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "lint": "yarn run lint:js && yarn run lint:styles",
        "lint:js": "eslint .eslintrc.json src/",
        "lint:styles": "stylelint '**/*.tsx' --config stylelintrc.json",
        "package": "web-ext build --source-dir dist",
        "start:hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'",
        "start:stand-alone": "webpack serve --config webpack.stand-alone.js --mode development"
    },
    "devDependencies": {
        "@emotion/css": "^11.7.1",
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@reduxjs/toolkit": "^1.7.2",
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "@types/feedparser": "^2.2.5",
        "@types/firefox-webext-browser": "^82.0.1",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/react-redux": "^7.1.22",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "@welldone-software/why-did-you-render": "^6.2.3",
        "async-mutex": "^0.3.2",
        "copy-webpack-plugin": "^9.0.1",
        "eslint": "^7.32.0",
        "eslint-plugin-react": "^7.28.0",
        "feedparser": "^2.2.10",
        "html-entities": "^2.3.2",
        "node-polyfill-webpack-plugin": "^1.1.4",
        "prettier": "^2.5.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-feather": "^2.0.9",
        "react-redux": "^7.2.6",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
        "stylelint-processor-styled-components": "^1.10.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5",
        "web-ext": "6.7.0",
        "web-ext-types": "^3.2.1",
        "webext-redux": "^2.1.9",
        "webextension-polyfill-ts": "^0.26.0",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.8.0",
        "webpack-dev-server": "^4.0.0"
    },
    "dependencies": {},
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "./wdyr",
            "^[react]",
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    }
}

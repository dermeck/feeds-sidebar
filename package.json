{
    "name": "ytrss",
    "version": "0.0.2",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/ytrss.git",
    "author": "dermeck <dermeck@posteo.de>",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch",
        "build": "webpack --mode production",
        "lint": "eslint .eslintrc.json",
        "package": "web-ext build --source-dir dist",
        "start-hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'"
    },
    "devDependencies": {
        "@emotion/css": "^11.1.3",
        "@emotion/react": "^11.4.0",
        "@emotion/styled": "^11.3.0",
        "@reduxjs/toolkit": "^1.6.0",
        "@trivago/prettier-plugin-sort-imports": "^2.0.2",
        "@types/feedparser": "^2.2.3",
        "@types/firefox-webext-browser": "^82.0.0",
        "@types/react": "^17.0.8",
        "@types/react-dom": "^17.0.5",
        "@types/react-redux": "^7.1.16",
        "@typescript-eslint/eslint-plugin": "^4.26.1",
        "@typescript-eslint/parser": "^4.26.1",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.28.0",
        "eslint-plugin-react": "^7.24.0",
        "feedparser": "^2.2.10",
        "node-polyfill-webpack-plugin": "^1.1.3",
        "prettier": "^2.3.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-feather": "^2.0.9",
        "react-redux": "^7.2.4",
        "ts-loader": "^9.2.2",
        "typescript": "^4.3.2",
        "web-ext": "6.0.0",
        "web-ext-types": "^3.2.1",
        "webext-redux": "^2.1.7",
        "webextension-polyfill-ts": "^0.25.0",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {},
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    }
}

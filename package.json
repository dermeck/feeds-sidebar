{
    "name": "feeds",
    "version": "0.21.0",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/feeds-sidebar.git",
    "author": "dermeck feeds-sb@dermeck.mozmail.com",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch --env enableLoggerMiddleware=true",
        "test": "jest",
        "start:stand-alone": "webpack serve --config webpack.stand-alone.js --mode development",
        "build:xpi": "npm run build && npm run sign",
        "build:zip": "npm run build && web-ext build --source-dir=build --artifacts-dir=dist",
        "build": "npm run lint && rimraf build && webpack --mode production && rimraf build/stand-alone  **/*.js.map **/**/*.js.map",
        "sign": "dotenv -- cross-var web-ext sign --source-dir=build --artifacts-dir=dist --api-key=%FF_API_KEY% --api-secret=%FF_API_SECRET%",
        "lint": "npm run lint:js && npm run find-deadcode",
        "lint:js": "eslint .eslintrc.json src/",
        "lint:styles": "stylelint '**/*.tsx' --config stylelintrc.json",
        "start:hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'",
        "check-env": "node -e 'console.log(process.env)' | grep npm",
        "find-deadcode": "ts-prune | (! grep -v 'used in module')"
    },
    "devDependencies": {
        "@emotion/css": "^11.10.0",
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "@reduxjs/toolkit": "^1.8.6",
        "@trivago/prettier-plugin-sort-imports": "^3.3.1",
        "@types/feedparser": "^2.2.5",
        "@types/firefox-webext-browser": "^94.0.1",
        "@types/jest": "^29.1.2",
        "@types/react": "^18.0.21",
        "@types/react-dom": "^18.0.6",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.40.0",
        "@typescript-eslint/parser": "^5.40.0",
        "@welldone-software/why-did-you-render": "^7.0.1",
        "buffer-browserify": "^0.2.5",
        "copy-webpack-plugin": "^11.0.0",
        "cross-var": "^1.1.0",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.25.0",
        "eslint-plugin-react": "^7.31.10",
        "fast-deep-equal": "^3.1.3",
        "fast-xml-parser": "^4.0.11",
        "feedparser": "^2.2.10",
        "html-entities": "^2.3.3",
        "jest": "^29.2.0",
        "jest-environment-jsdom": "^29.2.0",
        "node-polyfill-webpack-plugin": "^2.0.1",
        "phosphor-react": "^1.4.1",
        "prettier": "^2.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.4",
        "react-virtuoso": "^3.1.0",
        "redux-saga": "^1.2.1",
        "rimraf": "^3.0.2",
        "stream-browserify": "^3.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "ts-prune": "^0.10.3",
        "typescript": "^4.8.4",
        "uuid": "^9.0.0",
        "web-ext": "7.3.0",
        "web-ext-types": "^3.2.1",
        "webext-redux": "^2.1.9",
        "webextension-polyfill-ts": "^0.26.0",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.11.1"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "./wdyr",
            "^[react]",
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    },
    "packageManager": "yarn@3.2.4",
    "resolutions": {
        "webext-redux@^2.1.9": "patch:webext-redux@npm%3A2.1.9#./.yarn/patches/webext-redux-npm-2.1.9-e005835987.patch"
    }
}

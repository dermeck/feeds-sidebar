{
    "name": "feeds",
    "version": "0.30.1",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/feeds-sidebar.git",
    "author": "dermeck feeds-sb@dermeck.mozmail.com",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch --env enableLoggerMiddleware=true",
        "test": "jest --no-cache",
        "start:stand-alone": "webpack serve --config webpack.stand-alone.js --mode development",
        "build:xpi": "npm run build && npm run sign",
        "build:zip": "npm run build && web-ext build --source-dir=build --artifacts-dir=dist",
        "build": "npm run lint && rimraf build && webpack --mode production && rimraf build/stand-alone  **/*.js.map **/**/*.js.map",
        "sign": "dotenv -- cross-var web-ext sign --source-dir=build --artifacts-dir=dist --api-key=%FF_API_KEY% --api-secret=%FF_API_SECRET%",
        "lint": "npm run lint:js && npm run lint:styles && npm run find-deadcode",
        "lint:js": "eslint .eslintrc.json src/",
        "lint:styles": "stylelint '**/*.tsx' --config stylelintrc.json",
        "start:hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'",
        "check-env": "node -e 'console.log(process.env)' | grep npm",
        "find-deadcode": "ts-prune | (! grep -v 'used in module')"
    },
    "devDependencies": {
        "@emotion/css": "^11.11.2",
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.11.0",
        "@reduxjs/toolkit": "^2.2.1",
        "@total-typescript/ts-reset": "^0.5.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/feedparser": "^2.2.8",
        "@types/firefox-webext-browser": "^120.0.3",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.65",
        "@types/react-dom": "^18.2.21",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@welldone-software/why-did-you-render": "^7.0.1",
        "buffer-browserify": "^0.2.5",
        "copy-webpack-plugin": "^12.0.2",
        "cross-var": "^1.1.0",
        "dotenv-cli": "^7.4.1",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.0",
        "fast-deep-equal": "^3.1.3",
        "fast-xml-parser": "^4.3.5",
        "feedparser": "^2.2.10",
        "html-entities": "^2.5.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "node-polyfill-webpack-plugin": "^3.0.0",
        "phosphor-react": "^1.4.1",
        "postcss": "^8.4.35",
        "postcss-styled-components": "^0.2.1",
        "prettier": "^3.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.1.0",
        "redux-saga": "^1.3.0",
        "rimraf": "^5.0.5",
        "stream-browserify": "^3.0.0",
        "stylelint": "^16.2.1",
        "stylelint-config-idiomatic-order": "^10.0.0",
        "stylelint-config-recommended": "^14.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "ts-prune": "^0.10.3",
        "typescript": "^5.4.2",
        "web-ext": "7.11.0",
        "web-ext-types": "^3.2.1",
        "webextension-polyfill-ts": "^0.26.0",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "./wdyr",
            "^[react]",
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    },
    "packageManager": "yarn@3.2.4"
}

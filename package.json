{
    "name": "feeds",
    "version": "0.50.2",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/feeds-sidebar.git",
    "author": "dermeck feeds-sb@dermeck.mozmail.com",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch --env enableLoggerMiddleware=true",
        "test": "jest --no-cache --coverage=false",
        "start:stand-alone": "webpack serve --config webpack.stand-alone.js --mode development",
        "build:xpi": "npm run build && npm run sign",
        "build:zip": "npm run build && web-ext build --source-dir=build --artifacts-dir=dist",
        "build": "npm run lint && rimraf build && webpack --mode production && rimraf build/stand-alone  **/*.js.map **/**/*.js.map",
        "sign": "dotenv -- cross-replace web-ext sign --channel=unlisted --source-dir=build --artifacts-dir=dist --api-key=%FF_API_KEY% --api-secret=%FF_API_SECRET%",
        "lint": "npm run lint:js && npm run find-deadcode",
        "lint:js": "eslint .eslintrc.json src/",
        "start:hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'",
        "check-env": "node -e 'console.log(process.env)' | grep npm",
        "find-deadcode": "ts-prune | (! grep -v 'used in module')"
    },
    "devDependencies": {
        "@phosphor-icons/react": "^2.1.7",
        "@reduxjs/toolkit": "^2.4.0",
        "@total-typescript/ts-reset": "^0.6.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/feedparser": "^2.2.8",
        "@types/firefox-webext-browser": "^120.0.4",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.0.1",
        "@types/react-dom": "^19.0.1",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@welldone-software/why-did-you-render": "^7.0.1",
        "clsx": "^2.1.1",
        "copy-webpack-plugin": "^12.0.2",
        "cross-replace": "^0.2.0",
        "dotenv-cli": "^7.4.4",
        "eslint": "^8.57.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-compiler": "beta",
        "eslint-plugin-react-hooks": "^5.0.0",
        "fast-xml-parser": "^4.5.0",
        "feedparser": "^2.2.10",
        "html-entities": "^2.5.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "node-polyfill-webpack-plugin": "^4.0.0",
        "prettier": "^3.4.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-redux": "^9.1.2",
        "redux-saga": "^1.3.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "ts-prune": "^0.10.3",
        "typescript": "^5.7.2",
        "web-ext": "8.3.0",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "./wdyr",
            "^[react]",
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    },
    "packageManager": "yarn@3.2.4"
}

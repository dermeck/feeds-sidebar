{
    "name": "feeds",
    "version": "0.15.0",
    "description": "A Firefox extension to read RSS feeds",
    "repository": "git@github.com:dermeck/feeds-sidebar.git",
    "author": "dermeck feeds-sb@dermeck.mozmail.com",
    "license": "MIT",
    "scripts": {
        "start": "webpack --mode development --watch --env enableLoggerMiddleware=true",
        "test": "jest",
        "start:stand-alone": "webpack serve --config webpack.stand-alone.js --mode development",
        "build:xpi": "yarn run build && yarn run sign",
        "build:zip": "yarn run build && web-ext build --source-dir=build --artifacts-dir=dist",
        "build": "yarn run lint && rimraf build && webpack --mode production && rimraf build/stand-alone  **/*.js.map **/**/*.js.map",
        "sign": "web-ext sign --source-dir=build --artifacts-dir=dist --api-key=$npm_config_ffaddon_api_key --api-secret=$npm_config_ffaddon_api_secret",
        "lint": "yarn run lint:js && yarn run lint:styles",
        "lint:js": "eslint .eslintrc.json src/",
        "lint:styles": "stylelint '**/*.tsx' --config stylelintrc.json",
        "start:hotreload": "web-ext run --source-dir dist",
        "prettier": "prettier --write '**/*.{ts,js,css,html}'",
        "check-env": "node -e 'console.log(process.env)' | grep npm"
    },
    "devDependencies": {
        "@emotion/css": "^11.7.1",
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@reduxjs/toolkit": "^1.8.0",
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/feedparser": "^2.2.5",
        "@types/firefox-webext-browser": "^94.0.1",
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.41",
        "@types/react-dom": "^17.0.14",
        "@types/react-redux": "^7.1.23",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@welldone-software/why-did-you-render": "^6.2.3",
        "buffer-browserify": "^0.2.5",
        "copy-webpack-plugin": "^10.2.4",
        "eslint": "^8.11.0",
        "eslint-plugin-react": "^7.29.4",
        "fast-deep-equal": "^3.1.3",
        "feedparser": "^2.2.10",
        "html-entities": "^2.3.2",
        "jest": "^27.5.1",
        "node-polyfill-webpack-plugin": "^1.1.4",
        "phosphor-react": "^1.4.1",
        "prettier": "^2.6.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.6",
        "react-virtuoso": "^2.8.3",
        "redux-saga": "^1.1.3",
        "rimraf": "^3.0.2",
        "stream-browserify": "^3.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-idiomatic-order": "^8.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2",
        "uuid": "^8.3.2",
        "web-ext": "6.7.0",
        "web-ext-types": "^3.2.1",
        "webext-redux": "^2.1.9",
        "webextension-polyfill-ts": "^0.26.0",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    },
    "dependencies": {},
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "jsxBracketSameLine": true,
        "semi": true,
        "importOrder": [
            "./wdyr",
            "^[react]",
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
        ],
        "importOrderSeparation": true
    }
}

{
    "manifest_version": 2,
    "version": "0.29.1",
    "name": "Feeds",
    "description": "Manage your Web Feeds in the Sidebar.",
    "developer": {
        "name": "dermeck",
        "url": "https://github.com/dermeck"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "{5ec8f44f-ecf4-44ba-aa3b-56af66c6459d}",
            "strict_min_version": "115.0"
        }
    },

    "icons": {
        "48": "rss.svg"
    },

    "permissions": ["alarms", "<all_urls>", "storage"],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "sidebar_action": {
        "default_title": "Feeds",
        "default_panel": "/sidebar/sidebar.html",
        "default_icon": "rss.svg",
        "browser_style": true
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "rss.svg",
        "default_title": "Feeds"
    }
}

{
    "manifest_version": 2,
    "version": "0.4",
    "name": "YTRSS",

    "browser_specific_settings": {
        "gecko": {
            "id": "{cdd1ddb6-e12a-4c19-a0fc-4d8e304a3a1e}",
            "strict_min_version": "89.0"
        }
    },

    "icons": {
        "48": "rss.svg"
    },

    "permissions": ["alarms", "<all_urls>", "storage", "notifications"],

    "background": {
        "scripts": ["background.js"]
    },

    "sidebar_action": {
        "default_title": "YTRSS",
        "default_panel": "/sidebar/sidebar.html",
        "default_icon": "rss.svg",
        "browser_style": true
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "rss.svg",
        "default_title": "YTRSS"
    }
}

{
  "manifest_version": 2,
  "version": "0.1",
  "name": "YTRSS",

  "icons": {
    "48": "rss.svg"
  },

  "permissions": ["<all_urls>"],

  "background": {
    "scripts": ["background.js"]
  },

  "sidebar_action": {
    "default_title": "YTRSS",
    "default_panel": "/sidebar/sidebar.html",
    "default_icon": "rss.svg",
    "browser_style": true
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "rss.svg",
    "default_title": "YTRSS"
  }
}
